<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:width="80dp"
                android:height="80dp">
                <shape android:shape="oval">
                <stroke
                    android:color="#FFE8FF"
                    android:width="2dp"/>
                <gradient
                    android:type="linear"
                    android:angle="315.0"
                    android:startColor="#020891"
                    android:endColor="#DC6BF6" />
                </shape>
            </item>
            <item
                android:bottom="4.5dp"
                android:drawable="@drawable/ic_camera"
                android:gravity="center"/>
            <item
                android:left="26dp"
                android:bottom="14dp"
                android:drawable="@drawable/ic_camera_click_button"
                android:gravity="center"/>
            <item
                android:drawable="@drawable/ic_camera_center"
                android:gravity="center"/>
        </layer-list>
    </item>
</selector>